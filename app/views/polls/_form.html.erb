<%= form_for @poll do |f| %>

<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %>
</p>

<ul>
	<%= f.label :choice %>
	<%= render 'choices_form', :f => f %>
</ul>

<p>
	<%= f.submit "Submit" %>
</p>
	
<% end %>
