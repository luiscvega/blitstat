<p><%= link_to "Return", root_path %></p>

<h1><%= @poll.title %></h1>
<h2>Created by <%= @user.username %></h2>

<%= image_tag(@chart) %>

<%= form_for @vote do |f| %>
	<% @choices.each do |choice|%>
	<p>
		<%= f.radio_button :choice_id, choice.id %>
		<%= f.label "choice_id_#{choice.id}", 
		"#{choice.title} (#{choice.total_votes}/#{@poll.total_votes})"%><br />
	
	</p>
	<% end %>
	<%= f.submit "Submit" %>
<% end %>

